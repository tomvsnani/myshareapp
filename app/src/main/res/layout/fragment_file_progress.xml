<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FileProgressFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sendingfilesdrawable">
        <ProgressBar
            android:id="@+id/totalfilessendingprogressbar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:scaleY="200"
            android:progress="50"
            android:background="@drawable/sendingfilesdrawable"
            android:progressTint="#8C8CBB" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/sendingextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Sending Files"
                android:textColor="#ffffff"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/sentfilestextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Sending Files"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/remainingfilesextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Remaining Files"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/timeremailingsextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Time Remaining"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sendingfilesrecyclerview" />

</LinearLayout>